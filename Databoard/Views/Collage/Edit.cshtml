@model Databoard.Models.Entities.School
<h1>Edit Details</h1>
<form method="Post">



    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" asp-for="Id" class="form-control" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" placeholder="Enter Name" asp-for="Name" class="form-control" />
    </div>

    <div class="mt-3">
        <label class="form-label">Medium</label>
        <select asp-for="Medium" class="form-control">
            <option value="English">English</option>
            <option value="Hindi">Hindi</option>
            <option value="Sanskrit">Sanskrit</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Establish</label>
        <input type="date" asp-for="Establish" class="form-control" />
    </div>

    <div class="mt-3">
        <label class="form-label">Address</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>

    <div class="mt-3">
        <input type="checkbox" asp-for="Authorised" id="Authorised" class="form-check-input" />
        <label class="form-check-label">Authorised</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Collage">Delete</button>
    </div>

</form>
